from PySide2.QtCore import *
from PySide2.QtWidgets import *
from PySide2.QtGui import *

from cutevariant.gui.settings import AbstractSettingsWidget
from cutevariant.gui.plugin import PluginSettingsWidget

class {{name}}GeneralSettings(AbstractSettingsWidget):

	def __init__(self, parent = None):
		super().__init__(parent)

		self.input = QSpinBox(self)

	def save(self):
		config = self.create_config("{{name|camel_to_snake}}")
		config["param"]=self.input.value()
		config.save() 

	def load(self):
		config = self.create_config("{{name|camel_to_snake}}")
		self.input.setValue(config["param"])

	def reset(self):
		config = self.create_config("{{name|camel_to_snake}}")
		config.reset()
		config.save()


